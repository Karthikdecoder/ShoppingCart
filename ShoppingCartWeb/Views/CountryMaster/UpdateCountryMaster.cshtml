@model ShoppingCartWeb.Models.Dto.CountryMasterDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<form asp-action="UpdateCountryMaster">

    <div class="container border p-3">
        <h1 class="text-dark">Country</h1>
        <hr />

        <input hidden asp-for="CountryId" />
        <div class="row">
            <div class="col-md-6">
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="CountryName" class="control-label pt-2" style="font-size:17px;"> Country</label>
                    </div>
                    <div class="col-md-7 pb-4">
                        <input asp-for="CountryName" class="form-control" />
                        <span asp-validation-for="CountryName" class="text-danger"></span>
                    </div>


                    <div class="col-2 offset-5">
                        <a asp-action="IndexCountryMaster" asp-controller="CountryMaster" class="btn-primary btn form-control ">Cancel</a>
                    </div>
                    <div class="col-2">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
        </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}