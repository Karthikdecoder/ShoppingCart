@model ShoppingCartWeb.Models.Dto.CountryMasterDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="RemoveCountryMaster">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Remove Country</h1>
        <hr />
        <input hidden asp-for="CountryId" />
        <div class="row">

            <div class="col-2">
                <label asp-for="CountryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CountryId" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CountryName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CountryName" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexCountryMaster" asp-controller="CountryMaster" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}