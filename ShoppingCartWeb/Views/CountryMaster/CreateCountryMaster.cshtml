@model ShoppingCartWeb.Models.Dto.CountryMasterDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<form asp-action="CreateCountryMaster">
    <div class="container border p-3">
        <h1 class="text-dark">Add Country</h1>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <div class="row pb-3">
                    <div class="col">
                        <label asp-for="CountryName" class="control-label pt-2" style="font-size:16px;">Country</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="CountryName" class="form-control" />
                        <span asp-validation-for="CountryName" class="text-danger"></span>
                    </div>

                    <div class="col-5 offset-2">
                        <a asp-action="IndexCountryMaster" asp-controller="CountryMaster" class="btn-primary btn form-control ">Cancel</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Add" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}