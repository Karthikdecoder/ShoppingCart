@model IEnumerable<ShoppingCartWeb.Models.Dto.CountryMasterDTO>

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container p-4 border mt-4">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Country List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="CountryMaster" asp-action="CreateCountryMaster" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create new Country </a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					Country Id
				</th>
				<th>
					Country Name
				</th>

				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.CountryId</td>
					<td>@item.CountryName</td>
					<td>
						<a asp-controller="CountryMaster" asp-action="UpdateCountryMaster" asp-route-countryId="@item.CountryId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="CountryMaster" asp-action="RemoveCountryMaster" asp-route-countryId="@item.CountryId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>