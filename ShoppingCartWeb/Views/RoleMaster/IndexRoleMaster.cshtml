@model IEnumerable<ShoppingCartWeb.Models.Dto.RoleMasterDTO>

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container p-4 border mt-4">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Role List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="RoleMaster" asp-action="CreateRoleMaster" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create new Role </a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					Role Id
				</th>
				<th>
					Role Name
				</th>
				
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.RoleId</td>
					<td>@item.RoleName</td>
					<td>
						<a asp-controller="RoleMaster" asp-action="UpdateRoleMaster" asp-route-roleId="@item.RoleId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="RoleMaster" asp-action="RemoveRoleMaster" asp-route-roleId="@item.RoleId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>