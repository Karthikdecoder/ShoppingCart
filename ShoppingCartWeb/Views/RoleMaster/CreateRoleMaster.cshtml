@model ShoppingCartWeb.Models.Dto.RoleMasterDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="CreateRoleMaster">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Role</h1>
        <hr />

        <div class="row">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@

            <div class="col-2">
                <label asp-for="RoleName" class="control-label pt-2" style="font-size:16px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="IndexRoleMaster" asp-controller="RoleMaster" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Register" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}