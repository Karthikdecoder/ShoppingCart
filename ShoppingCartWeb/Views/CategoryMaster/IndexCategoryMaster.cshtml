@model IEnumerable<ShoppingCartWeb.Models.Dto.CategoryMasterDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row pb-2">
    <div class="col">
        <h1 class="text-dark">Categories</h1>
    </div>
    <div class="col-2 text-start pt-1 justify-content-start">
        <a asp-controller="CategoryMaster" asp-action="CreateCategoryMaster" class="btn btn-primary btn-sm ms-2">
            <div class="d-flex align-items-center">
                <span class="d-inline-block align-middle me-1" style="font-size: 24px;">Create</span>
                <!-- Increase the font-size value as needed -->
                <i class="bi bi-plus-square-fill ml-2" style="font-size: 21px;"></i>
                <!-- Increase the font-size value as needed -->
            </div>
        </a>
    </div>
</div>


<div class="container p-4 border mt-4">


    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Category Id
                    </th>
                    <th>
                        Category Name
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="white-space: nowrap;">@item.CategoryId</td>
                        <td>@item.CategoryName</td>
                        <td>

                            <div class="btn-group" role="group">
                                <a asp-controller="CategoryMaster" asp-action="UpdateCategoryMaster" asp-route-categoryId="@item.CategoryId" class="btn btn-success"><i class="bi bi-pencil-square"></i>  </a>
                                <br />
                                <a asp-controller="CategoryMaster" asp-action="RemoveCategoryMaster" asp-route-categoryId="@item.CategoryId" class="btn btn-danger ml-2"><i class="bi bi-trash-fill"></i>  </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>