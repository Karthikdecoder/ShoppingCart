@model ShoppingCartWeb.Models.VM.StateMasterPaginationVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<br />
<div class="row pb-2">
    <div class="col">
        <style>
            .text-dark {
                font-size: 24px; /* You can adjust the size to your preference, e.g., 24px, 36px, etc. */
                /* You can also use other units like em, rem, or % if you prefer. */
            }
        </style>

        <h1 class="text-dark">States</h1>
    </div>


    <div class="col-2 d-flex justify-content-end align-items-start">

        <a asp-controller="StateMaster" asp-action="CreateStateMaster" class="btn btn-primary btn-sm ms-2">
            <div class="d-flex align-items-center">

                <span class="d-inline-block align-middle" style="font-size: 17px;"><i class="bi bi-plus-square-fill"></i>  Create </span>

            </div>
        </a>
    </div>
</div>

<br />

<div>

    <div class="table-responsive">

        <table id="myTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        State Name
                    </th>
                    <th>
                        Country Name
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.StateMasterDTO)
                {

                    <tr>
                        <td>@item.StateName</td>
                        <td style="white-space: nowrap;"> @item.CountryMaster.CountryName</td>

                        @if (item.IsDeleted == false)
                        {
                            <td>

                                <div class="btn-group" role="group">
                                    <a asp-controller="StateMaster" asp-action="UpdateStateMaster" asp-route-stateId="@item.StateId" class=" button-spacing btn ml-1 text-success" style="font:bold">
                                        <span id="boot-icon" class="bi bi-pencil-square" style="font-size: 17px; color: rgb(0, 128, 55); -webkit-text-stroke-width: 0.6px; opacity: 0.9;"></span>
                                    </a>

                                    <a href="#" class="btn ml-1 text-danger delete-button" style="font:bold" data-toggle="modal" data-target="#deleteModal" data-stateId="@item.StateId">

                                        <span id="boot-icon" class="bi bi-trash-fill"
                                              style="font-size: 17px; color: rgb(255, 0, 0); -webkit-text-stroke-width: 0px; opacity: 0.9;">
                                        </span>
                                    </a>
                                </div>
                            </td>
                        }
                        else
                        {
                            <td>

                                <div class="btn-group" role="group">

                                    <a href="#" class="btn btn-primary btn-sm ml-2 enable-button" data-toggle="modal" data-target="#enableModal" data-stateId="@item.StateId">
                                        Active
                                    </a>

                                </div>
                            </td>
                        }

                    </tr>


                }

            </tbody>
        </table>


    </div>


    <!-- Enable Confirmation Modal -->
    <div class="modal fade" id="enableModal" tabindex="-1" role="dialog" aria-labelledby="enableModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="enableModalLabel">Confirm Enable</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to enable?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <a id="enableModalButton" asp-controller="StateMaster" asp-action="EnableStateMaster" asp-route-stateId="" asp-route-currentPageNo="@Model.CurrentPage" class="btn btn-success">Yes</a>
                </div>
            </div>
        </div>
    </div>


    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a id="deleteModalButton" asp-controller="StateMaster" asp-action="RemoveStateMaster" asp-route-stateId="" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>


    <br />
    <br />

    <nav aria-label="Page navigation example" style="float: right;margin-top: -35px;margin-right: 2px;font-size: smaller;">

        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/StateMaster/IndexStateMaster?orderBy=@Model.OrderBy&currentPage=@(Model.CurrentPage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {

                    <li class="page-item active"><a class="page-link active" href="/StateMaster/IndexStateMaster?orderBy=@Model.OrderBy&currentPage=@i"> @i</a></li>

                }
                else
                {
                    <li class="page-item"><a class="page-link" href="/StateMaster/IndexStateMaster?orderBy=@Model.OrderBy&currentPage=@i"> @i</a></li>
                }
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/StateMaster/IndexStateMaster?orderBy=@Model.OrderBy&currentPage=@Model.CurrentPage+1" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>

</div>

<br />

@section Scripts
    {

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable(
                {
                    "paging": false
                });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('.delete-button').click(function () {
                var stateId = $(this).data('stateid');
                console.log(stateId);
                $('#stateIdToDelete').text(stateId); // Set the StateId in the modal
                $('#deleteModalButton').attr('href', '/StateMaster/RemoveStateMaster?stateId=' + stateId); // Set the Delete button's URL
            });
        });

        $(document).ready(function () {
            $('.enable-button').click(function () {
                var stateId = $(this).data('stateid');
                $('#stateIdToEnable').text(stateId); // Set the StateId in the modal
                $('#enableModalButton').attr('href', '/StateMaster/EnableStateMaster?stateId=' + stateId); // Set the button's URL
            });
        });
    </script>

}


