@model IEnumerable<ShoppingCartWeb.Models.Dto.StateMasterDTO>

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container p-4 border mt-4">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">State List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="StateMaster" asp-action="CreateStateMaster" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create new State </a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					State Id
				</th>
				<th>
					State Name
				</th>

				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.StateId</td>
					<td>@item.StateName</td>
					<td>
						<a asp-controller="StateMaster" asp-action="UpdateStateMaster" asp-route-stateId="@item.StateId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="StateMaster" asp-action="RemoveStateMaster" asp-route-stateId="@item.StateId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>