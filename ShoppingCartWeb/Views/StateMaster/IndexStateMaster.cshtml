@model ShoppingCartWeb.Models.VM.StateMasterPaginationVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //@(ViewContext.RouteData.Values["Controller"].ToString() == "StateMaster" && ViewContext.RouteData.Values["Action"].ToString() == "IndexStateMaster" ? "active" : "")
}


<br />
<div class="row pb-2">
    <div class="col">
        <style>
            .text-dark {
                font-size: 24px; /* You can adjust the size to your preference, e.g., 24px, 36px, etc. */
                /* You can also use other units like em, rem, or % if you prefer. */
            }
        </style>

        <h1 class="text-dark">States</h1>
    </div>
    <div class="col-2 d-flex justify-content-end align-items-start">

        <a asp-controller="StateMaster" asp-action="CreateStateMaster" class="btn btn-primary btn-sm ms-2">
            <div class="d-flex align-items-center">

                <span class="d-inline-block align-middle" style="font-size: 17px;"><i class="bi bi-plus-square-fill"></i>  Create </span>

            </div>
        </a>
    </div>
</div>

<br />

<div>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        State Name
                    </th>
                    <th>
                        Country Name
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.StateMasterDTO)
                {
                    if (@item.IsDeleted == false)
                    {
                        <tr>
                            <td>@item.StateName</td>
                            <td style="white-space: nowrap;"> @item.CountryMaster.CountryName</td>

                            <td>

                                <div class="btn-group" role="group">
                                    <a asp-controller="StateMaster" asp-action="UpdateStateMaster" asp-route-stateId="@item.StateId" class=" button-spacing btn ml-1 text-success" style="font:bold">
                                        <span id="boot-icon" class="bi bi-pencil-square" style="font-size: 17px; color: rgb(0, 128, 55); -webkit-text-stroke-width: 0.6px; opacity: 0.9;"></span>
                                    </a>
                                    <a href="#" class="btn ml-1 text-danger" style=" font:bold " data-toggle="modal" data-target="#deleteModal_@item.StateId"> <span id="boot-icon" class="bi bi-trash-fill" style="font-size: 17px; color: rgb(255, 0, 0); -webkit-text-stroke-width: 0px; opacity: 0.9;"></span> </a>
                                </div>
                            </td>
                        </tr>
                        <!-- Delete Confirmation Modal for each item -->
                        <div class="modal fade" id="deleteModal_@item.StateId" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this item?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <a asp-controller="StateMaster" asp-action="RemoveStateMaster" asp-route-stateId="@item.StateId" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    else
                    {
                        <tr>
                            <td style="white-space: nowrap;">@item.StateName</td>
                            <td style="white-space: nowrap;"> @item.CountryMaster.CountryName</td>
                            <td>

                                <div class="btn-group" role="group">

                                    <a href="#" class="btn btn-primary btn-sm ml-2" data-toggle="modal" data-target="#enableModal_@item.StateId"> Active </a>

                                </div>
                            </td>
                        </tr>
                    }

                    <!-- Enable Confirmation Modal for each item -->
                    <div class="modal fade" id="enableModal_@item.StateId" tabindex="-1" role="dialog" aria-labelledby="enableModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="enableModalLabel">Confirm Enable</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to Enable this item?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                    <a asp-controller="StateMaster" asp-action="EnableStateMaster" asp-route-stateId="@item.StateId" asp-route-currentPageNo="@Model.CurrentPage" class="btn btn-success">Yes</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>


        <script>
            $(document).ready(function () {
                $("#deleteConfirmationModal").on("click", function (e) {
                    e.preventDefault();
                    var stateId = $(this).data("stateId");
                    Swal.fire({
                        title: 'Confirm Deletion',
                        text: 'Are you sure you want to delete this user?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Delete',
                        cancelButtonText: 'Cancel'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            alert(registerstateId);
                                        .ajax({
                                type: "POST",
                                url: '@Url.Action("RemoveStateMaster", "StateMaster")',
                                data: { stateId: $(this).data("stateId") },
                                dataType: 'json',
                                success: function (data) {
                                    location.reload(true);
                                },
                                error: function () {
                                    location.reload(true);
                                }
                            });
                        }
                    });
                });
            });
        </script>


    </div>

    <nav aria-label="Page navigation example" class="justify-content-end">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/StateMaster/IndexStateMaster?orderBy=@Model.OrderBy&currentPage=@(Model.CurrentPage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item"><a class="page-link active" href="/StateMaster/IndexStateMaster?orderBy=@Model.OrderBy&currentPage=@i"> @i</a></li>

                }
                else
                {
                    <li class="page-item"><a class="page-link" href="/StateMaster/IndexStateMaster?orderBy=@Model.OrderBy&currentPage=@i"> @i</a></li>
                }
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/StateMaster/IndexStateMaster?orderBy=@Model.OrderBy&currentPage=@Model.CurrentPage+1" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>

</div>


