@model ShoppingCartWeb.Models.VM.StateMasterCreateVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<form asp-action="UpdateStateMaster">
    <div class="container border p-3">
        <style>
            .text-dark {
                font-size: 24px; /* You can adjust the size to your preference, e.g., 24px, 36px, etc. */
                /* You can also use other units like em, rem, or % if you prefer. */
            }
        </style>
        <h1 class="text-dark">State</h1>
        <hr />

        <input hidden asp-for="State.StateId" />
        <input hidden asp-for="State.CreatedBy" />
        <input hidden asp-for="State.CreatedOn" />

        <div class="row">
            <div class="col-md-6">
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="State.StateName" class="control-label pt-2" style="font-size:17px;">State</label>
                    </div>
                    <div class="col-9 pb-3">
                        <input asp-for="State.StateName" class="form-control" />
                        <span asp-validation-for="State.StateName" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="State.CountryId" class="control-label pt-2" style="font-size:17px;">Country</label>
                    </div>
                    <div class="col-9 pb-3">
                        <select asp-for="State.CountryId" class="form-control" asp-items="@Model.CountryList">
                            <option disabled selected>--Select Country--</option>
                        </select>
                        <span asp-validation-for="State.CountryId" class="text-danger"></span>
                    </div>


                    <div class="col-2 offset-7">
                        <a asp-action="IndexStateMaster" asp-controller="StateMaster" class="btn-primary btn form-control ">Cancel</a>
                    </div>
                    <div class="col-2">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}