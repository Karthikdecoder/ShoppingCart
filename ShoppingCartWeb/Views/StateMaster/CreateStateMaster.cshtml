@model ShoppingCartWeb.Models.VM.StateMasterCreateVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="CreateStateMaster">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create State</h1>
        <hr />

        <div class="row">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@

            <div class="col-2">
                <label asp-for="State.StateName" class="control-label pt-2" style="font-size:16px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="State.StateName" class="form-control" />
                <span asp-validation-for="State.StateName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="State.CountryId" class="control-label pt-2" style="font-size:16px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="State.CountryId" class="form-select" asp-items="@Model.CountryList">
                    <option disabled selected>--Select Country--</option>
                </select>
                <span asp-validation-for="State.CountryId" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexStateMaster" asp-controller="StateMaster" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Register" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}