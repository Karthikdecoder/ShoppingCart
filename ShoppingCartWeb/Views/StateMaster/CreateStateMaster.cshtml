@model ShoppingCartWeb.Models.VM.StateMasterCreateVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @(ViewContext.RouteData.Values["Controller"].ToString() == "StateMaster" && ViewContext.RouteData.Values["Action"].ToString() == "CreateStateMaster" ? "active" : "")
}
<br />
<form asp-action="CreateStateMaster">
    <div class="container border p-3">
        <h1 class="text-dark">Add State</h1>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="State.StateName" class="control-label pt-2" style="font-size:20px;">State</label>
                    </div>
                    <div class="col-9 pb-3">
                        <input asp-for="State.StateName" class="form-control" />
                        <span asp-validation-for="State.StateName" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="State.CountryId" class="control-label pt-2" style="font-size:20px;">Country</label>
                    </div>
                    <div class="col-9 pb-3">
                        <select asp-for="State.CountryId" class="form-control" asp-items="@Model.CountryList">
                            <option disabled selected>--Select Country--</option>
                        </select>
                        <span asp-validation-for="State.CountryId" class="text-danger"></span>
                    </div>

                    
                    <div class="col-3 offset-3">
                        <a asp-action="IndexStateMaster" asp-controller="StateMaster" class="btn-primary btn form-control ">Cancel</a>
                    </div>
                    <div class="col-3">
                        <input type="submit" value="Save" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}