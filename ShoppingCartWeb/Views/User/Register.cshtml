@model ShoppingCartWeb.Models.VM.UserRegisterationVM

<form asp-action="UserRegister">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">UserRegister</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="col-2">
                <label asp-for="User.RegistrationId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="User.RegistrationId" class="form-select" asp-items="@Model.RegistrationList">
                    <option disabled selected>--Select UserName--</option>
                </select>
                <span asp-validation-for="User.RegistrationId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="User.RoleId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="User.RoleId" class="form-select" asp-items="@Model.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
                <span asp-validation-for="User.RoleId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="User.Password" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>

            <div class="col-5">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}