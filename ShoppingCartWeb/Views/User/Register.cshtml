    <script>
        $(function () {
            $("#Name").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("GetRegistrationName", "User")',
                        type: "POST",
                        dataType: "json",
                        data: { prefix: request.term },
                        success: function (nameList) {

                            var mappedData = $.map(nameList, function (item) {
                                return {

                                    label: item.firstName, // Displayed in the suggestion list
                                    value: item.firstName, // Value put in the input field
                                    registrationId: item.registrationId // Additional data you might need
                                };
                            });

                            // Pass the mapped data to the response
                            response(mappedData);
                        },
                        error: function () {
                            alert(response.responseText);
                        },
                        failure: function () {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, ui) {
                    $("#Name").val(ui.item.value);
                    $("#registrationId").val(ui.item.registrationId);
                },
                minLength: 1
            });
        });
    </script>

