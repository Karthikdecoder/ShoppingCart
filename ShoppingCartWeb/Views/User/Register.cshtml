@model ShoppingCartWeb.Models.VM.RegisterVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<form asp-action="Register">
    <div class="container border p-3">
        <style>
            .text-dark {
                font-size: 24px; /* You can adjust the size to your preference, e.g., 24px, 36px, etc. */
                /* You can also use other units like em, rem, or % if you prefer. */
            }
        </style>
        <h1 class="text-dark">Add User</h1>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <div class="row pb-3">
                    <div class="col-md-3">
                        <label asp-for="User.UserName" class="control-label pt-2" style="font-size:14px;">User Name</label>
                    </div>
                    <div class="col-md-9 pb-4">
                        <input asp-for="User.UserName" class="form-control" />
                        <span asp-validation-for="User.UserName" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="User.Password" class="control-label pt-2" style="font-size:14px;"> Password </label>
                    </div>
                    <div class="col-md-9 pb-4">
                        <input asp-for="User.Password" class="form-control" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>



                    <div class="col-md-3">
                        <label for="User.RegistrationId" class="control-label pt-2" style="font-size:14px;"> Registered Name </label>
                    </div>
                    <div class="col-md-9 pb-4">
                        <input type="text" id="Name" class="form-control" />
                        <input type="hidden" id="registrationId" asp-for="User.RegistrationId" />

                    </div>



                    <div class="col-md-3">
                        <label asp-for="User.RoleId" class="control-label pt-2" style="font-size:14px;">Role</label>
                    </div>
                    <div class="col-md-9 pb-4">
                        <select asp-for="User.RoleId" class="form-control" asp-items="@Model.roleList">
                            <option disabled selected>--Select Role--</option>
                        </select>
                        <span asp-validation-for="User.RoleId" class="text-danger"></span>
                    </div>
                </div>


                <div class="row">

                    <div class="col-md-5"></div>
                    <div class="col-md-6">

                        <div class="row">
                            <div class="col-4">
                                <a asp-action="IndexUser" asp-controller="User" class="btn-primary btn form-control ">Cancel</a>
                            </div>
                            <div class="col-4">
                                <input type="submit" value="Save" class="btn btn-success form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



</form>

