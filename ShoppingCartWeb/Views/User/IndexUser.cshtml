@model IEnumerable<ShoppingCartWeb.Models.Dto.UserDTO>

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">User List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="User" asp-action="Register" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Register </a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					User Id
				</th>
				<th>
					Username
				</th>
				<th>
					Password
				</th>
				<th>
					First Name
				</th>
				<th>
					Last Name
				</th>
				<th>
					Role
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.UserId</td>
					<td>@item.UserName</td>
					<td>@item.Password</td>
					<td>@item.Registration.FirstName</td>
					<td>@item.Registration.LastName</td>
					<td>@item.RoleMaster.RoleName</td>
					<td>
						<a asp-controller="User" asp-action="UpdateUser" asp-route-userId="@item.UserId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="User" asp-action="RemoveUser" asp-route-userId="@item.UserId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>